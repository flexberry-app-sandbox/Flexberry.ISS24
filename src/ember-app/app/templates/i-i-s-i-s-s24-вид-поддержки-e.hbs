<h3 class="ui header">{{t "forms.i-i-s-i-s-s24-вид-поддержки-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-i-s-s24-вид-поддержки-e.наименование-caption")
      data-test-i-i-s-i-s-s24-вид-поддержки-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.описание
      class=(if (v-get validationModel "описание" "isInvalid") "error")
      label=(t "forms.i-i-s-i-s-s24-вид-поддержки-e.описание-caption")
      data-test-i-i-s-i-s-s24-вид-поддержки-e-описание=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "описание" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-s-s24-вид-поддержки-e.списокФорм-caption"}}</label>
    {{flexberry-groupedit
      componentName="списокФормGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.списокФорм
      content=model.списокФорм
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "списокФорм" "isInvalid") "error")
      data-test-i-i-s-i-s-s24-вид-поддержки-e-списокФорм=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "списокФорм" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-s-s24-вид-поддержки-e.списокУсловий-caption"}}</label>
    {{flexberry-groupedit
      componentName="списокУсловийGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.списокУсловий
      content=model.списокУсловий
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "списокУсловий" "isInvalid") "error")
      data-test-i-i-s-i-s-s24-вид-поддержки-e-списокУсловий=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "списокУсловий" "message")}}
  </div>
</form>
